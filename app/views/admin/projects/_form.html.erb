<%= form_with model: [:admin, project] do |f| %>
  <% if project.errors.any? %>
    <div class="errors">
      <h3><%= pluralize(project.errors.count, "error") %> prevented saving:</h3>
      <ul>
        <% project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :deadline %><br>
    <%= f.date_field :deadline %>
  </p>

  <%= f.submit %>
<% end %>
