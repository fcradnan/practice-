<h2><%= @project.name %></h2>
<p><%= @project.description %></p>
<p><strong>Deadline:</strong> <%= @project.deadline %></p>

<h3>Tasks</h3>
<%= link_to "Add Task", new_admin_project_task_path(@project), class: "btn btn-secondary" %>

<ul>
  <% @project.tasks.each do |task| %>
    <li>
      <%= task.title %> - <%= task.status %> 
      (<%= link_to "View", admin_project_task_path(@project, task) %>)
    </li>
  <% end %>
</ul>

<%= link_to "Back to Projects", admin_projects_path %>
