<%= form_with model: [:admin, project, task] do |f| %>
  <% if task.errors.any? %>
    <div class="errors">
      <h3><%= pluralize(task.errors.count, "error") %> prevented saving:</h3>
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </p>

  <p>
    <%= f.label :status %><br>
    <%= f.select :status, ["pending", "in_progress", "completed"] %>
  </p>

  <p>
    <%= f.label :due_date %><br>
    <%= f.date_field :due_date %>
  </p>

  <%= f.submit %>
<% end %>
