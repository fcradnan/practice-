#!/usr/bin/env ruby
require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  puts "== Installing dependencies =="
  system("bundle check") || system!("bundle install")

  puts "\n== Checking database.yml configuration =="
  db_yml = File.join("config", "database.yml")
  unless File.exist?(db_yml)
    puts "⚠️  Missing config/database.yml! Creating a default SQLite config..."
    File.open(db_yml, "w") do |f|
      f.write <<~YML
        default: &default
          adapter: sqlite3
          pool: 5
          timeout: 5000

        development:
          <<: *default
          database: db/development.sqlite3

        test:
          <<: *default
          database: db/test.sqlite3

        production:
          <<: *default
          database: db/production.sqlite3
      YML
    end
  end

  puts "\n== Preparing database =="
  system! "bin/rails db:drop db:create db:migrate"

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  unless ARGV.include?("--skip-server")
    puts "\n== Starting development server =="
    STDOUT.flush
    exec "bin/dev"
  end
end
